<div class="container user-histroy">
  <div class="row">
  <div id="user-profile-section" class="col-md-3">
		<%= image_tag(@user.picture, :class => "profile-image") %>

		<h2><%= @user.name %></h2>

		<p>Last seen: <%= @user.current_city %></p>

		<p>Joined: <%= @user.created_at.strftime("%d %b. %Y") %></p>

		<%= link_to "Edit Profile", edit_user_path(@user.id), class: "edit-profile-button" %>
	</div>
  <div class="user-post-section col-offset-md-2 col-md-7">
	  <h2>Your Stories</h2>
			<% @posts.each do |post| %>
      <div class="user-post-block">
  			 <h4 class="user-post-title"><%= link_to post.title, show_post_path(@user.id, post.id), class: "user-post-title" %></h4>
         <div class="controllers">
         <%= link_to "", city_post_path(get_city(post.id), post.id), data: { confirm: 'Are you sure you want to delete "' + post.title + '"' }, method: :delete, class: "glyphicon glyphicon-remove" %>
         <%= link_to "	", edit_city_post_path(get_city(post.id), post.id), class: "glyphicon glyphicon-pencil" %>
        </div>
      </div>
			 <p class="post-content"><%= post.content %></p>
		<% end %>
	</div>
</div>
</div>
</div>
