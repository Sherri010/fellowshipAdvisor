<h2><%= @user.name %></h2>
<%= image_tag(@user.picture, :class => "img-size") %><br>
<span>Last seen: </span><%= @user.current_city %><br>
<span>Joined: </span><%= @user.created_at.strftime("%d %b. %Y") %><br>
<%= link_to "Edit Profile", edit_user_path(@user.id) %>

<h3>Posts</h3>
<% @posts.each do |post| %>
 <p><b><%= link_to post.title, show_post_path(@user.id, post.id) %></b></p><br>
 <p><%= post.content %></p>

<%= link_to "Delete Post", delete_post_path(get_city(post.id), post.id), data: { confirm: 'Are you sure you want to delete "' + post.title + '"' }, method: :delete %>

<%= link_to "Edit Post", edit_city_post_path(get_city(post.id), post.id) %>

<% end %>

