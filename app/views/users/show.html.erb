<div class="container user-histroy">

  <!-- Start User Profile Section -->
  <div class="row">
  <div id="user-profile-section" class="col-md-3">
		<%= image_tag(@user.picture, :class => "profile-image") %>

		<h2><%= @user.name %></h2>

		<p>Last seen: <%= @user.current_city %></p>

		<p>Joined: <%= @user.created_at.strftime("%d %b. %Y") %></p>

		<%= link_to "Edit Profile", edit_user_path(@user.id), class: "edit-profile-button" %>
	</div>


  <!-- Start User Post Section -->
  <div class="user-post-section col-offset-1 col-md-8">
	  <h2>Your history</h2>
		<div class="user-post-block">
			<% @posts.each do |post| %>
			 <h4 class="user-post-title"><%= link_to post.title, show_post_path(@user.id, post.id), class: "user-post-title" %></h4>
			 <p><%= post.content %></p>

			<%= link_to "Delete Post", delete_post_path(get_city(post.id), post.id), data: { confirm: 'Are you sure you want to delete "' + post.title + '"' }, method: :delete, class: "btn btn-danger" %>

			<%= link_to "Edit Post", edit_city_post_path(get_city(post.id), post.id), class: "btn btn-primary" %>
		</div>

		<% end %>
	</div>
</div>
</div>
</div>
